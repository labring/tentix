{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "**/.env*",
    "DEV",
    "BASE_URL"
  ],
  "globalDependencies": [
    ".env.local",
    "tsconfig.json",
    "eslint.config.*",
    "frontend/src/**/*.tsx",
    "server/src/**/*.ts"
  ],
  "tasks": {
    "build:types": {
      "dependsOn": [],
      "inputs": [
        "$TURBO_DEFAULT$",
        "server/tsconfig.json",
        "server/src/{api|db|utils|scripts}/**/*.ts"
      ],
      "outputs": [
        "server/output/**"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "tentix-server#build:types",
        "^typecheck"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig*.json"
      ],
      "outputs": [
        "packages/ui/types/**",
        "server/types/**"
      ]
    },
    "frontend#typecheck": {
      "dependsOn": [
        "tentix-server#build:types"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig*.json"
      ],
      "outputs": []
    },
    "tentix-server#typecheck": {
      "inputs": [
        "$TURBO_DEFAULT$",
        "server/tsconfig.json",
        "server/src/{api|db|utils|scripts}/**/*.ts"
      ],
      "outputs": [
        "server/types/**"
      ]
    },
    "tentix-ui#typecheck": {
      "dependsOn": [
        "tentix-server#build:types"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "packages/ui/tsconfig.json",
        "packages/ui/src/**"
      ],
      "outputs": [
        "packages/ui/types/**"
      ]
    },
    "build": {
      "dependsOn": [
        "^typecheck",
        "tentix-server#build:types",
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "server/dist"
      ]
    },
    "frontend#build": {
      "dependsOn": [
        "^typecheck",
        "tentix-server#build:types",
        "frontend#typecheck"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "tsconfig*.json",
        "frontend/src/**/*.tsx"
      ],
      "outputs": [
        "server/dist/**"
      ]
    },
    "tentix-server#build": {
      "dependsOn": [
        "^typecheck",
        "frontend#build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "server/tsconfig.json"
      ],
      "outputs": [
        "server/dist/**"
      ]
    },
    "dev": {
      "cache": false,
      "env": [
        "NODE_ENV"
      ],
      "persistent": true,
      "dependsOn": [
        "^build:types"
      ]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.*"
      ],
      "outputs": []
    },
    "test": {
      "dependsOn": [
        "^test"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "vitest.config.*",
        "jest.config.*"
      ],
      "outputs": [
        "coverage/**"
      ]
    },
    "code-clean": {
      "dependsOn": [
        "^code-clean"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        "eslint.config.*",
        "tsconfig*.json"
      ],
      "outputs": []
    }
  }
}